---
import { getCollection } from 'astro:content'
const projects = await getCollection('projects')
const categories = {
  'Architecture': projects.filter((p) => p.data.category?.includes('Architecture')),
  'Full Stack': projects.filter((p) => p.data.category?.includes('FullStack')),
  'Data Science & ML': projects.filter((p) => p.data.category?.includes('DataScience') || p.data.category?.includes('ML')),
}
---

<nav class="sticky top-0 z-10 bg-white/60 backdrop-blur-sm border-b border-gray-100">
  <div class="w-full flex justify-center gap-4 py-1.5">
    {Object.keys(categories).map(catName => (
      <a 
        href={`#${catName.replace(/\s+/g, '-')}`} 
        class="px-4 py-1.5 rounded-full bg-gray-100 text-gray-800 hover:bg-accent hover:text-white transition shadow-sm hover:shadow"
      >
        {catName}
      </a>
    ))}
  </div>
</nav>






{Object.entries(categories).map(([categoryName, categoryProjects]) => (
  <>
    <h2 id={categoryName.replace(/\s+/g, '-')} class="text-xl font-bold mt-12 mb-4">
      {categoryName}
    </h2>

    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {categoryProjects.map((project) => (
        <li>
          <a href={`/projects/${project.slug}`}>
            <div class="rounded-lg bg-accent/10 overflow-hidden group">
              <div class="aspect-video overflow-hidden">
                <img
                  class="size-full object-cover transition-transform group-hover:scale-110"
                  src={project.data.image}
                  alt={`Project cover: ${project.data.title}`}
                  loading="lazy"
                />
              </div>
              <div class="p-4">
                <div class="group-hover:text-accent">
                  <span class="text-xl font-bold">{project.data.title}</span>
                  <i class="ml-2 iconfont icon-external-link" />
                </div>
                <p class="mt-2 text-sm line-clamp-2">{project.data.description}</p>
              </div>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </>
))}

